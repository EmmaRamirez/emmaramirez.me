@import 'variables.styl'
@import 'normalize.styl'

body
  background: #222
  color: #222;

.site-header
  background: linear-gradient(to left, $seafoam, $seafoam2);
  color: darken($seafoam, 45%);
  color: #333;
  padding: 1rem;
  .site-heading
    margin: 0;
    text-align: center;
  .site-heading-subtitle
    font-size: 1.25rem;
    font-style: italic;
    font-weight: 100;
    padding: .25rem;

.site-main
  //background: #333;
  margin: 4rem auto;
  max-width: 60rem;
  padding: 2vw;

.site-article
  padding: 1rem;
  .site-article-date-time
    color: #ddd;
    display: inline-block;
    text-align: center;
    width: 100%;
  .site-article-heading
    font-size: 2.2rem;
    margin-bottom: .25rem;
    text-align: center;
    a
      color: #eee;
      text-decoration: none;
      transition: 250ms all;
      &:hover
        color: darken($seafoam, 45%);
        transition: 250ms all;
  .content
    color: #eee;
    font-size: 1.2rem;
    line-height: 1.4;
    p
      text-indent: 2rem;
  .tag-container
    //align-content: center;
    align-content: center;
    align-items: center;
    display: flex;
    justify-content: center;
    //margin: .25rem auto;
    margin: .25rem;
    width: 100%;
  .site-article-tag
    background: darken($seafoam2, 35%);
    display: inline-block;
    font-size: 12px;
    margin: 0 .25rem;
    padding: .25rem;
    &[data-tag='javascript'],
    &[data-tag='es6']
      background: $javascript;
      color: #333;
    &[data-tag='css']
      background: $css;
    &[data-tag='stylus']
      background: $stylus;


.site-footer
  margin-bottom: 5vh;
  .site-footer-text
    color: darken($seafoam, 25%);
    text-align: center;
  .site-portrait
    border: 1px solid $seafoam;
    background: linear-gradient(to left, rgba($seafoam, 0.5), rgba($seafoam2, 0.5)), url('../img/pineapple.jpg');
    background-blend-mode: color;
    background-size: cover;
    height: 10rem;
    margin: 0 auto;
    transition: 300ms all;
    width: 10rem;
    &:hover
      background-blend-mode: normal;
      cursor: pointer;
      transition: 300ms all;
