@import 'normalize'
@import 'blocks'
@import 'global'

a = rgb(230, 224, 210);
b = rgb(105, 148, 132);
c = rgb(105, 148, 166);
t = transparent;



.site-header
  background: b;
  background: linear-gradient(-45deg, b, c);
  left: 0;
  margin: 0;
  position: fixed;
  top: 0;
  width: 100%;

.site-heading
  color: a;
  font-size: 2rem;
  letter-spacing: 5px;
  margin: 0;
  text-align: center;
  text-transform: uppercase;

.site-content
  margin: 8vh auto;
  max-width: 60vw;

.site-article
  border: 1px solid t;
  margin: 1vw;
  padding: 1rem;
  {transition-s}
  &:hover
    //background: a;
    border: 1px solid b;
    {transition-s}
  .article-heading
    color: b;
    font-size: 1.8rem;
    letter-spacing: 4px;
    text-align: center;
    text-transform: uppercase;
    &:hover
      color: darken(b, 10%);
      {transition-s}
  .article-date
    color: b;
    font-size: .9rem;
    text-align: center;
  .article-description
    font-family: 'Slabo 27px';
    font-size: 1.2rem;
    font-style: italic;
    line-height: 1.4;
    text-align: center;

.site-footer

.site-portrait
  background-image: url('../../img/pineapple.jpg');
  background-size: cover;
  height: 6rem;
  margin: 0 auto;
  width: 6rem;
