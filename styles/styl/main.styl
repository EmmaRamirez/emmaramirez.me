@import 'vars'
@import 'normalize'
@import 'blocks'
@import 'global'

.site-header
  background: b;
  background: linear-gradient(-45deg, b, c);
  left: 0;
  margin: 0;
  //position: fixed;
  top: 0;
  width: 100%;

.site-heading
  color: a;
  font-size: 2rem;
  letter-spacing: 5px;
  margin: 0;
  padding: 1vw;
  text-align: center;
  text-transform: uppercase;

.site-nav
  background: a;
  .site-nav-items
    align-items: center;
    display: flex;
    justify-content: space-around;
    list-style-type: none;
    margin: 0;
    padding: 0;
  .nav-item
    flex-basis: 20%;
  .nav-item-link
    color: darken(b, 35%);
    display: block;
    padding: 1vw;
    text-align: center;
    {transition-s}
    &:hover
      background: darken(a, 10%);
      {transition-s}

.site-content
  margin: 8vh auto;
  max-width: 60vw;

.site-article
  border: 1px solid t;
  margin: 1vw;
  padding: 1rem;
  {transition-s}
  &:hover
    //background: a;
    border: 1px solid b;
    {transition-s}
  .article-heading
    color: b;
    font-size: 1.8rem;
    letter-spacing: 4px;
    text-align: center;
    text-shadow: -1px 1px 0 t;
    text-transform: uppercase;
    {transition-s}
    &:hover
      color: darken(b, 10%);
      text-shadow: -1px 1px 0 a;
      {transition-s}
  .article-date
    color: b;
    font-size: .9rem;
    text-align: center;
  .article-description
    font-family: 'Slabo 27px';
    font-size: 1.2rem;
    font-style: italic;
    line-height: 1.4;
    text-align: center;

.site-footer
  margin: 5vw;

.site-portrait
  background-blend-mode: luminosity;
  background-image: url('../../img/pineapple.jpg'), linear-gradient(b, a);
  background-size: cover;
  height: 6rem;
  margin: 0 auto;
  width: 6rem;
  {transition-s}
  &:hover
    background-blend-mode: normal;
    {transition-s}

.site-bg-canvas
  background: a;
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: -1;
