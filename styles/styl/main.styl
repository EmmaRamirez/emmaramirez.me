a = rgb(230, 224, 210);
b = rgb(105, 148, 132);

body {
  background: b;
  //color: #eee;
  font-family: 'Helvetica', sans-serif;
}

h1 {
  color: a;

  font-size: 4rem;
  letter-spacing: 5px;
  margin-top: 10%;
  text-align: center;
  text-transform: uppercase;
}

.portrait {
  background-image: url('../../img/pineapple.jpg');
  background-size: cover;
  border: 4px solid a;
  border: 4px solid darken(b, 15%);
  border-radius: 50%;
  margin: 0 auto;
  height: 16rem;
  width: 16rem;
}

p {
  color: a;
  font-size: 1.5rem;
  margin: 2rem auto;
  padding: 1rem;
  text-align: center;
  max-width: 40rem;
}
