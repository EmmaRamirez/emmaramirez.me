@import 'normalize'
@import 'blocks'
@import 'global'

a = rgb(230, 224, 210);
b = rgb(105, 148, 132);
c = rgb(105, 148, 166);



.site-header
  background: b;
  background: linear-gradient(-45deg, b, c);
  left: 0;
  margin: 0;
  position: fixed;
  top: 0;
  width: 100%;

.site-heading
  color: a;
  font-size: 2rem;
  letter-spacing: 5px;
  margin: 0;
  text-align: center;
  text-transform: uppercase;

.site-content
  margin: 8vh auto;
  max-width: 60vw;

.site-article
  .article-heading
    color: b;
    font-size: 1.8rem;
    letter-spacing: 4px;
    text-align: center;
    text-transform: uppercase;
  .article-description
    font-size: 1.2rem;
    line-height: 1.4;
