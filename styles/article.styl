@import 'variables.styl';

.site-main-article
  margin: 1rem auto;
  margin-bottom: 4rem;
  max-width: 60rem;
  padding: 2vw;

.article-heading
  color: $text;
  font-size: 4rem;
  margin: 0;
  text-align: center;
  .npm-logo
    height: 5rem;
    vertical-align: bottom;

.article-metadata
  text-align: center;

.article-date-time
  color: lighten($text, 30%);
    //display: block;
  font-size: .9rem;
  margin: .5rem;

.article-author
  font-size .9rem;
  width: 100%;
  img
    border-radius: 50%;
    height: 1rem;
    vertical-align: middle;

.article-content
  font-family: 'Georgia';
  font-size: 1.4rem;
  line-height: 1.4;
  text-align: left;
  a
    border-bottom: 1px solid transparent;
    color: $seafoam;
    text-decoration: none;
    &:hover
      border-bottom: 1px solid $seafoam;
      color: darken($seafoam, 15%);
      transition: 500ms all;
  h3, h2
    font-family: sans-serif;
  code
    //background: #eee;
    border: 1px solid #ddd;
    font-family: sans-serif;
    font-size: 1rem;
    display: block;
    margin: .25rem .5rem;
    padding: .75rem;
    position: relative;
    &[data-filename]
      padding-top: 1.75rem;
    &[data-filename]::before
      content: attr(data-filename);
      background: darken($body, 2%);
      color: $text;
      display: block;
      font-size: .9rem;
      left: 0;
      padding: .25rem;
      position: absolute;
      user-select: none;
      top: 0rem;
      width: 100%;
  p:nth-of-type(1)::first-line
    font-size: 1.6rem;
    font-style: italic;
  .img-container
    margin: 1rem auto;
    max-height: 400px;
    &.tall-img
      max-height: 800px;
    img
      display: block;
      height: 100%;
      margin: 0 auto;
      width: auto;
  .caption
    color: #999;
    display: block;
    font-size: 1rem;
    font-style: italic;
    text-align: center;
    padding: .25rem;
    width: 100%;
